doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title WanderLens
        link(rel="stylesheet" href="../styles/style.css")
        // Bootstrap 5 CSS
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")

    body 

        header 
            nav.navbar.navbar-light.bg-light.p-3
                .container
                    a#site-name.mb-0.text-primary(href="/") WanderLens

        .container.mt-5
            main 
                // Destination Form
                .card.shadow.p-4
                    h2.mb-3.text-center Enter Destination
                    form(action="/submit" method="GET")
                        .mb-3
                            label.form-label(for="destination") Destination:
                            input.form-control(type="text" id="destination" name="destination" required)

                        button.btn.btn-primary(type="submit") Get Details

                // Error Message
                if error
                    .alert.alert-danger.mt-3= error

        // Footer
        footer.bg-dark.text-white.text-center.p-3.mt-5
            p.mb-0 WanderLens - Travel Insights
